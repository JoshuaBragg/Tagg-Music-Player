<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/taggIconHeader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="Tagg Icon"
        android:src="@drawable/tagg_icon_small"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/taggIconHeader"
        android:layout_toEndOf="@+id/taggIconHeader"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:text="Tagg Music Player"
            android:fontFamily="@font/hkgrot_semibold"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:text="Created by: Joshua Bragg"
            android:fontFamily="@font/hkgrot_semibold"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

    </LinearLayout>

</RelativeLayout>