<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nowPlayingBarFrag"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    tools:context="gg.joshbra.tagg.Fragments.NowPlayingBarFragment"
    android:visibility="gone">

    <ImageButton
        android:id="@+id/pausePlayBtn"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:tint="@color/colorAccent"/>

        <RelativeLayout
            android:id="@+id/botBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/songNameBarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hkgrot_semibold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/artistNameBarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hkgrot_reg"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingTop="2dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorTextSecondary" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>